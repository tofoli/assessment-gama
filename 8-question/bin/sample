#!/usr/bin/env ruby

require_relative '../../1-question/lib/writer'

DATA = {
  "breakfast_menu": {
    "food": [
      {
        "name": "Belgian Waffles",
        "price": "$5.95",
        "description": "Two of our famous Belgian Waffles with plenty of real maple syrup",
        "calories": 650
      },
      {
        "name": "Strawberry Belgian Waffles",
        "price": "$7.95",
        "description": "Light Belgian waffles covered with strawberries and whipped cream",
        "calories": 900
      },
      {
        "name": "Berry-Berry Belgian Waffles",
        "price": "$8.95",
        "description": "Belgian waffles covered with assorted fresh berries and whipped cream",
        "calories": 900
      }
    ]
  }
}

class JsonWriter
  def self.writer
    content = Writer.write(DATA, Writer::Json)
    File.write('file.json', content)
  end
end

class XMLWriter
  def self.writer
    content = Writer.write(DATA, Writer::Xml)
    File.write('file.xml', content)
  end
end

puts "Qual arquivo vocÃª deseja salvar?"
puts "JSON"
puts "XML"

option = gets.strip.upcase

if option == "JSON"
  JsonWriter.writer
end

if option == "XML"
  XMLWriter.writer
end
